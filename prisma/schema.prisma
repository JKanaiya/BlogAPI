generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  text      String
  writer    User      @relation(fields: [userId], references: [id])
  userId    Int
  Comment   Comment[]
  published Boolean
  created   DateTime
  edited    DateTime?
}

model User {
  id       Int       @id @default(autoincrement())
  Role     Role      @default(READER)
  email    String    @unique
  password String
  Comment  Comment[]
  Post     Post[]
}

model Comment {
  id           Int       @id @default(autoincrement())
  text         String
  Post         Post      @relation(fields: [postId], references: [id])
  postId       Int
  User         User      @relation(fields: [userId], references: [id])
  userId       Int
  subCommentId Int?
  comment      Comment?  @relation("commentSubComments", fields: [subCommentId], references: [id])
  subComments  Comment[] @relation("commentSubComments")
}

enum Role {
  READER
  AUTHOR
}
